<div class="row">
  <div class="col-md-2">

    <% @hash = Digest::MD5.hexdigest(@user.email.downcase) %>
    <% if @hash %>
    <div class="span2">
      <img src="http://gravatar.com/avatar/<%= @hash %>"/>
    </div>
    <% end %>

    <div class="span8">
        <h6><%= @user.name %></h6>
        <h6><%= @user.email %></h6>
    </div>
  </div>
  <div class="col-md-10">
    <% if @tweets %>
      <%= erb :"tweets/_tweets", locals: {tweets: @tweets} %>
    <% end %>
  </div>
</div>

<a href='/tweet/new'>Create New Tweet</a>
