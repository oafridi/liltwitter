<div class="row">
  <div class="col-md-2">
    <div class="span2" >
    <img src="https://secure.gravatar.com/avatar/de9b11d0f9c0569ba917393ed5e5b3ab?s=140&r=g&d=mm" class="img-circle">
    </div>

    <div class="span8">
        <h4><%= @user.name %></h4>
        <h4><%= @user.email %></h4>
    </div>
  </div>
  <div class="col-md-10">
    <% if @tweets %>
    <h3>Tweets</h3>
    <div class="list-group">
      <ul class="list-group">
      <% @tweets.each do |tweet| %>
        <li class="list-group-item"><%= tweet.body %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  </div>
</div>

<a href='/tweet/new'>Create New Tweet</a>
